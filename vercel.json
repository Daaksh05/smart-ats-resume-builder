{
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/index.py"
        },
        {
            "source": "/auth/:path*",
            "destination": "/api/index.py"
        },
        {
            "source": "/((?!api|auth).*)",
            "destination": "/index.html"
        }
    ]
}